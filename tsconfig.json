{
  "compilerOptions": {
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "baseUrl": "./",
    "importHelpers": true,
    "alwaysStrict": true,
    "lib": ["dom", "es5", "es6", "es2016", "es2017"],
    "paths": {
      "tslib": ["jspm_packages/npm/tslib@1.3.0/tslib"]
    }
  },
  "exclude": [
    "node_modules",
    "plugins",
    "less",
    "images",
    "dev",
    "certs",
    "app",
    "jspm_packages",
    "lib"
  ]
}
